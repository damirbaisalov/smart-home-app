<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_activity_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <com.sanojpunchihewa.glowbutton.GlowButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:buttonColor="@color/button_color"
            app:glowColor="@color/white"
            android:text="УМНЫЙ ДОМ"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:minLines="2"
            android:padding="30dp"
            app:cornerRadius="200dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВЫБЕРИТЕ СВОЙ АДРЕС"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="80dp"
            />

        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="НАЧАТЬ"
            android:textColor="@color/white"
            app:glowColor="@color/white"
            app:buttonColor="@color/button_color"
            app:unpressedGlowSize="8dp"
            app:pressedGlowSize="13dp"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingHorizontal="30dp"
            app:cornerRadius="10dp"
            android:layout_marginVertical="20dp"
            />



    </LinearLayout>


</RelativeLayout>