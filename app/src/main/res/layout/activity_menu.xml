<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <include
        android:id="@+id/activity_menu_toolbar"
        layout="@layout/activity_menu_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/activity_menu_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/logo_news"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Новости"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="@color/news_text_color"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_ripple_effect"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/logo_my_ksk"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Мой КСК"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="@color/my_ksk_text_color"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_ripple_effect"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/logo_my_home_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Мой дом"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="@color/my_home_text_color"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_ripple_effect"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/logo_my_requests"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Мои заявки"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="@color/my_requests_text_color"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_ripple_effect"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/logo_ksk_list"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Список КСК"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="@color/ksk_list_text_color"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/bg_ripple_effect"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>