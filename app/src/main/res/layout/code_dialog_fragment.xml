<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:paddingVertical="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Код подтверждения"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/code_number_1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore= "LabelFor"
            android:textColorHighlight="@color/button_color"
            android:textCursorDrawable="@color/button_color"
            android:backgroundTint="@color/button_color"
            />

        <EditText
            android:id="@+id/code_number_2"
            android:layout_marginStart="4dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore= "LabelFor"
            android:textCursorDrawable="@color/button_color"
            android:backgroundTint="@color/button_color"
            />

        <EditText
            android:id="@+id/code_number_3"
            android:layout_marginStart="4dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore= "LabelFor"
            android:textCursorDrawable="@color/button_color"
            android:backgroundTint="@color/button_color"
            />

        <EditText
            android:id="@+id/code_number_4"
            android:layout_marginStart="4dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore= "LabelFor"
            android:textCursorDrawable="@color/button_color"
            android:backgroundTint="@color/button_color"
            />


    </LinearLayout>

    <Button
        android:id="@+id/code_dialog_fragment_confirm_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердить регистрацию"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/bg_activity_registration_submit_button"
        android:layout_marginTop="30dp"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Повторно отправить код"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/bg_activity_registration_submit_button"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/code_dialog_fragment_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/bg_activity_registration_submit_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>