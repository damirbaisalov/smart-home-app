<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news_detailed.NewsDetailedActivity">

    <ProgressBar
        android:id="@+id/activity_news_detailed_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/activity_news_toolbar"/>

            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/news_detailed_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingHorizontal="3dp"
                android:src="@drawable/kb_pattern"
                android:paddingVertical="4dp"
                />

            <TextView
                android:id="@+id/news_detailed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нет данных"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/news_detailed_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нет данных"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                android:layout_marginHorizontal="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="16dp"
                />

            <TextView
                android:id="@+id/news_detailed_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нет данных"
                android:gravity="end"
                android:maxLines="1"
                android:layout_marginBottom="20dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="16dp"
                />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>