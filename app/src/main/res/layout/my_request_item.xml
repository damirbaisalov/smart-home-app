<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/my_request_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Электротехника"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/my_request_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="№58"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:textSize="18sp"
        android:letterSpacing="0"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/my_request_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Павлодар, Ак. Чокина 98"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:letterSpacing="0"
        app:layout_constraintTop_toBottomOf="@id/my_request_heading"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/my_request_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="На третьем этаже подъезда взорвали бомбочку, нужно все починить"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="100dp"
        android:letterSpacing="0"
        android:maxLines="2"
        android:minLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/my_request_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/my_request_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_my_request_status_done"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:letterSpacing="0"
        android:paddingVertical="2dp"
        android:layout_marginTop="5dp"
        android:text="исполнена"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/my_request_text"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/my_request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.09.21"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/my_request_status_text"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/my_request_status_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>